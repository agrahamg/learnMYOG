---
export type Props = {
  header: string;
  style?: string;
};

const { header, style, class: clazz = "" } = Astro.props;
---

<section class={"flex flex-col md:flex-row container " + clazz ?? ""}>
  <h2 class="mt-0 pb-3 text-xl md:w-1/3 md:text-center">
    {header}
  </h2>
  <div class="prose max-w-none md:w-2/3">
    <slot />
  </div>
</section>

<style>
  .prose > :global(img:first-child + *) {
    margin-top: 0;
  }
</style>
